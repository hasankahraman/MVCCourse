@using EntityLayer.Concrete
@model List<About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hakkımızda Veri Listesi</h2>

<table class="table table-bordered">

    <tr>
        <th>Id</th>
        <th>Başlık</th>
        <th>Aktif Yap</th>
        <th>Pasif Yap</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AboutId</td>
            <td>Başlık</td>
            <td><a href="/About/ActivateAbout/" class="btn btn-warning">Aktif Yap</a></td>
            <td><a href="/About/DeactivateAbout/" class="btn btn-danger">Pasif Yap</a></td>
        </tr>
    }
</table>
<br />
@Html.Action("AddAboutOnPartialView","About")
