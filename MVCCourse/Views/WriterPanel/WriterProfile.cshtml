@using EntityLayer.Concrete
@model Writer
@*@{
        ViewBag.Title = "WriterProfile";
        Layout = "~/Views/Shared/_WriterLayout.cshtml";
    }*@
@{
    Layout = "";
}

<!DOCTYPE html>
<html>
<head>
    <title>Yetenek Kartım</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!--Custom Theme files-->
    <link href="/AdminLTE-3.0.4/web/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <!--//Custom Theme files -->
    <!--web font-->
    <link href='//fonts.googleapis.com/css?family=Questrial' rel='stylesheet' type='text/css'>
    <link href='//fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic,700,700italic,800,800italic' rel='stylesheet' type='text/css'>
    <!--//web font-->
    <!--circle-chart-->
    <script src="/AdminLTE-3.0.4/web/js/jquery-1.11.1.min.js"></script>
    <!--//circle-chart-->
    <!--ResponsiveTabs-->
    <script src="/AdminLTE-3.0.4/web/js/easyResponsiveTabs.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#horizontalTab').easyResponsiveTabs({
                type: 'default', //Types: default, vertical, accordion
                width: 'auto', //auto or any width like 600px
                fit: true   // 100% fit in a container
            });
        });
    </script>
    <!--//ResponsiveTabs-->
</head>
<body>
    <!-- main -->
    <div class="main">
        <h1>Profilim</h1>
        <div class="main-info w3l">
            <div class="main-row">
                <!-- main-row-one -->
                <div class="profile-grid logo wthree">
                    <img src=@Model.Image alt="" width="200" height="200">
                    <h2>@Model.Name @Model.Surname </h2>
                    <p>@Model.Title</p>
                    <p>@Model.Email</p>

                </div>
                <h3 class="title">Yetenekler</h3>
                <div class="col-md-6 skills-right bar_group">

                    <div class='bar_group__bar thin' label='C# &nbsp;&nbsp; 80%' value='80'></div>
                    <div class='bar_group__bar thin' label='SQL &nbsp;&nbsp; 100%' value='100'></div>
                    <div class='bar_group__bar thin' label='HTML &nbsp;&nbsp; 72%' value='72'></div>
                    <div class='bar_group__bar thin' label='CSS &nbsp;&nbsp; 88%' value='88'></div>
                </div>
                <!--bar-js-->
                <script src="/AdminLTE-3.0.4/web/js/bars.js"></script>
            </div>
        </div>
    </div>
    <!-- main -->
</body>
</html>
